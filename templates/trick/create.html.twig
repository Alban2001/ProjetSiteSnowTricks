{% extends "base.html.twig" %}

{% block title %}
    Trick
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div>
        <h1>Ajout d'un trick</h1>
        <div class="form-control m-3 d-flex flex-column">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            <div class="form-error bg-danger text-white mt-2">
                {{ form_errors(form.nom) }}
                {{ form_errors(form.slug) }}
            </div>
        </div>
        <div class="form-control m-3 d-flex flex-column">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error bg-danger text-white mt-2">
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="form-control m-3 d-flex flex-column">
            {{ form_label(form.imagePrincipale) }}
            {{ form_widget(form.imagePrincipale) }}
            <div class="form-error bg-danger text-white mt-2">
                {{ form_errors(form.imagePrincipale) }}
            </div>
        </div>
        {% set k = 1 %}
        {% for illustration in form.illustrations %}
            <div class="form-control m-3 d-flex flex-column">
                {{ form_label(illustration.nom, "Image #" ~ k)}}
                {{ form_widget(illustration.nom) }}
                <div class="form-error bg-danger text-white mt-2">
                    {{ form_errors(illustration.nom) }}
                </div>
            </div>
            {% set k = k + 1 %}
        {% endfor %}
        <div class="form-control m-3 d-flex flex-column">
            {{ form_label(form.videoPrincipale) }}
            {{ form_widget(form.videoPrincipale) }}
            <div class="form-error bg-danger text-white mt-2">
                {{ form_errors(form.videoPrincipale) }}
            </div>
        </div>
        {% set i = 1 %}
        {% for video in form.videos %}
            <div class="form-control m-3 d-flex flex-column">
                {{ form_label(video.nom, "Vid√©o #" ~ i) }}
                {{ form_widget(video.nom) }}
                <div class="form-error bg-danger text-white mt-2">
                    {{ form_errors(video.nom) }}
                </div>
            </div>
            {% set i = i + 1 %}
        {% endfor %}
        <div class="form-control m-3 d-flex flex-column">
            {{ form_label(form.groupe) }}
            {{ form_widget(form.groupe) }}
            <div class="form-error bg-danger text-white mt-2">
                {{ form_errors(form.groupe) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <script src="/scripts/create.js"></script>
{% endblock %}
